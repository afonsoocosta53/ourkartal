                                        {{/ifCond}} {{#ifCond this.productStatus '===' "devolucao_iniciada"}}
                                        <h4 class="estadoEncomenda">Estado da encomenda: <span class="devolvido">Devolução iniciada</span></h4>
                                        {{/ifCond}}


                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-3 col-xs-3">
                                    <div class="product-btns-p2">
                                        <div class="devolverbuttons">
                                            {{#ifCond this.productStatus '===' "venda"}}
                                            <form action="/user/removerProduto" method="post">
                                                <input type="text" id="id_produto" name="id_produto" value="{{this.id_produto}}" style="display: none"></input>
                                                <button type="submit" class="btn btn-danger btn-sm"><i class="fa fa-times"></i>Remover</button>
                                            </form> {{/ifCond}} {{#ifCond this.productStatus '===' "enviado"}} {{/ifCond}} {{#ifCond this.productStatus '===' "pago"}} {{/ifCond}} {{#ifCond this.productStatus '===' "pago_empresa"}}
