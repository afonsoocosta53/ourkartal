                    <div class="row">

                        <!-- Product Single -->
                        {{#each primeira_fila}} {{#if this}}
                        <div class="col-md-12 col-sm-6 col-xs-6">
                            <div class="product product-single-linha">
                                <div class="col-md-3 col-sm-3 col-xs-3">
                                    <div class="product-thumb ">
                                        <img src="../../img/{{this.imagem}}" alt="">
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-3 col-xs-3">
                                    <div class="product-body-p2">
                                        <h2 class="product-name"><a href="#">{{this.nome_produto}}</a></h2>
                                        <i class="fa fa-viacoin"></i>
                                        <h3 class="product-price"> {{this.preco}} </h3>
                                        <h4 class="vendauser">Comprador: <span class="classvendedor"><a href="#">{{this.nome_vendedor}}</a></span></h4>
                                        {{#ifCond this.productStatus '===' "venda"}}
                                        <h4 class="estadoEncomenda">Estado da encomenda: <span class="devolvido">À venda</span></h4>
                                        {{/ifCond}} {{#ifCond this.productStatus '===' "enviado"}}
                                        <h4 class="estadoEncomenda">Estado da encomenda: <span class="devolvido">Enviado</span></h4>
                                        {{/ifCond}} {{#ifCond this.productStatus '===' "pago"}}
