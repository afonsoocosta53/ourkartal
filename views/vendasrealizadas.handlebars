<div class="col-md-9">

    <div class="page-wrapper chiller-theme toggled">
        <div class="section-title2">
            <h2 class="title">Vendas Realizadas</h2>
        </div>
        <main class="page-content2">


            <div class="CPaseguir">
                <!-- STORE -->
                <div id="store2">
                    <!-- row -->
                    <div class="row">

                        <!-- Product Single -->
                        {{#each primeira_fila}} {{#if this}}
                        <div class="col-md-12 col-sm-6 col-xs-6">
                            <div class="product product-single-linha">
                                <div class="col-md-3 col-sm-3 col-xs-3">
                                    <div class="product-thumb ">
                                        <img src="../../img/{{this.imagem}}" alt="">
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-3 col-xs-3">
                                    <div class="product-body-p2">
                                        <h2 class="product-name"><a href="#">{{this.nome_produto}}</a></h2>
                                        <i class="fa fa-viacoin"></i>
                                        <h3 class="product-price"> {{this.preco}} </h3>
                                        <h4 class="vendauser">Comprador: <span class="classvendedor"><a href="#">bmvcosta</a></span></h4>
                                        {{#ifCond this.productStatus '===' "devolucao_concluida"}}
                                        <h4 class="estadoEncomenda">Estado da encomenda: <span class="devolvido">Devolução concluida</span></h4>
                                        {{/ifCond}} {{#ifCond this.productStatus '===' "removido"}}
                                        <h4 class="estadoEncomenda">Estado da encomenda: <span class="devolvido">Removida</span></h4>
                                        {{/ifCond}} {{#ifCond this.productStatus '===' "concluido"}}
                                        <h4 class="estadoEncomenda">Estado da encomenda: <span class="devolvido">Concluida</span></h4>
                                        {{/ifCond}}


                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-3 col-xs-3">
                                    <div class="product-btns-p2">
                                        <div class="devolverbuttons">
                                            {{#ifCond this.productStatus '===' "devolucao_concluida"}}
                                            <form action="/user/removerProduto" method="post">
                                                <input type="text" id="id_produto" name="id_produto" value="{{this.id_produto}}" style="display: none"></input>
                                                <button type="submit" class="btn btn-danger btn-sm"><i class="fa fa-times"></i>Remover</button>
                                            </form>

                                            <form action="/user/volvarVenda" method="post">
                                                <input type="text" id="id_produto" name="id_produto" value="{{this.id_produto}}" style="display: none"></input>
                                                <button type="submit" class="btn btn-danger btn-sm"><i class="fa fa-retweet"></i>Voltar a vender</button>
                                            </form>

                                            {{/ifCond}} {{#ifCond this.productStatus '===' "removido"}}

                                            <form action="/user/volvarVenda" method="post">
                                                <input type="text" id="id_produto" name="id_produto" value="{{this.id_produto}}" style="display: none"></input>
                                                <button type="submit" class="btn btn-danger btn-sm"><i class="fa fa-retweet"></i>Voltar a vender</button>
                                            </form>
                                            {{/ifCond}} {{#ifCond this.productStatus '===' "concluido"}} {{/ifCond}}
                                        </div>
                                    </div>
                                    <div class="clearfix visible-sm visible-xs"></div>
                                    <div class="clearfix visible-md visible-lg"></div>
                                </div>
                            </div>

                            {{/if}} {{/each}}
