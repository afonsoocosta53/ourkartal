<div class="col-md-9">

    <div class="page-wrapper chiller-theme toggled">

        <main class="page-content">
            <div class="store-filter clearfix">
                <div class="pull-left">
                    <span class="">{{numero_produtos}}</span>
                    <span class="">produto(s)</span>
                </div>
                <div class="pull-right">
                    <div class="sort-filter">
                        <span class="text-uppercase">Ordenar por: </span>
                        <select class="input" id="order_by" name="order_by">
                                        <option value="null">{{sortfiltro}}</option>
                                        {{#ifCond sortfiltro '===' "Relevancia"}}
                                        <option value="mais_barato">Mais Barato</option>
										<option value="mais_caro">Mais Caro</option>
                                        {{else}}
                                        {{/ifCond}}
                                        {{#ifCond sortfiltro '===' "Mais Caro"}}
