<script>
    $(document).ready(function() {
        $('#order_by').on('change', function() { // ORDENAR POR MAIS BARATO
            if ($(this).val() === "mais_barato") {
                var url = window.location.href;
                var url2 = window.location.search;
                if (url.includes("sort")) {
                    var url = url.replace(url2, "?sort=ascendente");

                    alert(url2)
                }
                else {
                    if (url === 'https://ourkartal-afonsoocosta53.c9users.io/user/aseguir/{{currentPage}}') {
                        var url = url + "?sort=ascendente";
                    }
                    else {
                        var url = url + "&sort=ascendente";
                    }
                }
                window.location = url;
            }
        });

        $('#order_by').on('change', function() { // ORDENAR POR RELEVANCIA
            if ($(this).val() === "relevancia") {
                var url = window.location.href;
                var url2 = window.location.search;
                if (url.includes("sort")) {
                    var url = url.replace(url2, "");

                    alert(url2)
                }
                else {
                    if (url === 'https://ourkartal-afonsoocosta53.c9users.io/user/aseguir/{{currentPage}}') {
                        var url = url;
                    }
                    else {
                        var url = url;
                    }
                }
                window.location = url;
            }
        });

        $('#order_by').on('change', function() { // ORDENAR POR MAIS CARO
            if ($(this).val() === "mais_caro") {
                var url = window.location.href;
                var url2 = window.location.search;
                if (url.includes("sort")) {
                    var url = url.replace(url2, "?sort=descendente");
                    alert(url2)
                }
                else {
                    if (url === 'https://ourkartal-afonsoocosta53.c9users.io/user/aseguir/{{currentPage}}') {
                        var url = url + "?sort=descendente";
                    }
                    else {
                        var url = url + "&sort=descendente";
                    }
                }
                window.location = url;
            }
        });
    });
</script>
