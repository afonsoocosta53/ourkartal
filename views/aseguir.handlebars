                <div class="store-filter-bottom clearfix">
                    <div class="pull-left">
                        <ul class="store-pages">
                            <li><span class="text-uppercase">Página:</span></li>
                            {{#each pages}}
                            <li class="active"><a href="/products/{{this}}">{{this}}</a></li>
                            {{/each}}
